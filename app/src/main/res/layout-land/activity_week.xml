<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WeekActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/week_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <TextView
        android:id="@+id/week_week"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/week_toolbar"
        android:text="@string/week_week"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/week_left_arrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/week_toolbar"
        android:contentDescription="@string/week_left_arrow"
        android:rotationY="180"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow"
        tools:ignore="RedundantDescriptionCheck" />

    <ImageButton
        android:id="@+id/week_right_arrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/week_toolbar"
        android:contentDescription="@string/week_right_arrow"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow"
        tools:ignore="RedundantDescriptionCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/week_recycler"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/week_week"
        android:contentDescription="@string/week_recycler"
        />

    <TextView
        android:id="@+id/week_total"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/week_total"
        android:layout_below="@id/week_recycler"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/week_morning"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/week_morning"
        android:layout_below="@id/week_total"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/week_road"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/week_road"
        android:layout_below="@id/week_morning"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/week_break"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/week_break"
        android:layout_below="@id/week_total"
        android:layout_toEndOf="@id/week_afternoon"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/week_totalhour"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/week_total_time"
        android:layout_below="@id/week_break"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/week_afternoon"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/week_afternoon"
        android:layout_below="@id/week_total"
        android:layout_toEndOf="@id/week_morning"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/week_loading"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/week_loading"
        android:layout_below="@id/week_afternoon"
        android:layout_toEndOf="@id/week_road"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/week_additional"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/week_additional"
        android:layout_below="@id/week_morning"
        android:layout_toEndOf="@id/week_loading"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

</RelativeLayout>