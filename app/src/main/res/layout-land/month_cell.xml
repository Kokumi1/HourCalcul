<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/month_cell_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/month_cell_date"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/month_cell_total"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="@string/month_cell_total"
        android:layout_toEndOf="@id/month_cell_date"
        android:layout_marginTop="10dp"
        android:layout_marginStart="100dp"
        />
    <TextView
        android:id="@+id/month_cell_additional"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="@string/month_cell_additional"
        android:layout_toEndOf="@id/month_cell_total"
        android:layout_marginTop="10dp"
        android:layout_marginStart="100dp"
        />

</RelativeLayout>